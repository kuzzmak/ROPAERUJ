package hr.fer.zemris.trisat;

import java.util.ArrayList;
import java.util.List;
import java.util.Random;

public class BitVector {
	
	private int numberOfBits;
	private List<Boolean> bitNum;
	
	public BitVector(Random rand, int numberOfBits) {
		bitNum = new ArrayList<>();
		for(int i = 0; i < numberOfBits; i++) {
			bitNum.add(rand.nextBoolean());
		}
		System.out.println(bitNum);
	}

	@Override
	public String toString() {
		StringBuilder sb = new StringBuilder("");
		for(int index = 0; index < numberOfBits; index++) {
			System.out.println(index);
			if(bitNum.get(index).toString().equals(Boolean.TRUE)) {
				System.out.println("ulaz");
				sb.append(1);
			}else {
				sb.append(0);
			}
		}
		System.out.println(bitNum.size());
		return sb.toString();
	}
	
	
}


